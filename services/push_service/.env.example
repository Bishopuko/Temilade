# Push Service Configuration
# Copy this file to .env and configure the values

# Node.js Environment
NODE_ENV=development
PORT=8080

# RabbitMQ Configuration
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_USER=admin
RABBITMQ_PASS=admin
RABBITMQ_VHOST=/

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379

# Push Notification Provider Configuration
FIREBASE_SERVICE_ACCOUNT=your-firebase-service-account-object
FCM_SERVER_KEY=your-fcm-server-key
APNS_CERT_PATH=/app/certs/apns-cert.pem
APNS_KEY_PATH=/app/certs/apns-key.pem

# Template Service
TEMPLATE_SERVICE_URL=http://template_service:8081

# Logging
LOG_LEVEL=info
